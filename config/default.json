{
  "dataPath": "./docs/specs",
  "dataFormat": "markdown",
  "templatePath": "./templates",
  "structure": {
    "active": "active",
    "backlog": "backlog", 
    "done": "done"
  },
  "parsing": {
    "filePattern": "**/*.md",
    "frontMatterRequired": false,
    "taskFormat": "asd"
  },
  "display": {
    "priorityColors": {
      "P0": "red",
      "P1": "yellow", 
      "P2": "cyan",
      "P3": "gray"
    },
    "theme": "default",
    "autoRefresh": true,
    "refreshDebounce": 500
  },
  "cli": {
    "defaultPriority": "P2",
    "defaultStatus": "backlog",
    "supportedTypes": ["SPEC", "FEAT", "BUG", "SPIKE", "MAINT", "RELEASE"],
    "statusFolders": ["active", "backlog", "done"],
    "priorities": ["P0", "P1", "P2", "P3"]
  }
}