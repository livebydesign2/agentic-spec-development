{
  "dataPath": "./docs/specs",
  "dataFormat": "auto",
  "templatePath": "./templates",
  "structure": {
    "active": "active",
    "backlog": "backlog",
    "done": "done"
  },
  "parsing": {
    "filePattern": "**/*.{md,json,yaml,yml}",
    "frontMatterRequired": false,
    "taskFormat": "asd",
    "supportedExtensions": ["md", "json", "yaml", "yml"]
  },
  "formatOptions": {
    "json": {
      "indent": 2,
      "sortKeys": true,
      "dateFormat": "iso"
    },
    "yaml": {
      "indent": 2,
      "lineWidth": 120,
      "noRefs": false,
      "quotingType": "\""
    },
    "markdown": {
      "taskFormat": "asd",
      "frontMatter": true,
      "preserveFormatting": true
    }
  },
  "validation": {
    "schema": "strict",
    "requiredFields": ["id", "title", "status", "priority"],
    "autoFix": true,
    "customSchemaPath": null
  },
  "conversion": {
    "preserveMetadata": true,
    "validateOnConvert": true,
    "backupOriginals": true,
    "defaultTargetFormat": "json"
  },
  "display": {
    "priorityColors": {
      "P0": "red",
      "P1": "yellow",
      "P2": "cyan",
      "P3": "gray"
    },
    "theme": "default",
    "autoRefresh": true,
    "refreshDebounce": 500,
    "showFormatIndicator": true
  },
  "cli": {
    "defaultPriority": "P2",
    "defaultStatus": "backlog",
    "supportedTypes": ["SPEC", "FEAT", "BUG", "SPIKE", "MAINT", "RELEASE"],
    "statusFolders": ["active", "backlog", "done"],
    "priorities": ["P0", "P1", "P2", "P3"],
    "defaultFormat": "auto",
    "conversionOptions": {
      "parallel": true,
      "progressCallback": true,
      "validateAfterConversion": true
    }
  }
}
