{
  "name": "agentic-spec-development",
  "version": "0.1.0-alpha",
  "description": "AI Agent Workflow Automation Platform - Self-managing development through intelligent agent coordination and task routing",
  "keywords": [
    "agentic",
    "workflow-automation",
    "ai-agents",
    "task-routing",
    "context-injection",
    "self-managing",
    "cli",
    "development-orchestration",
    "agent-coordination",
    "handoff-automation",
    "specification",
    "project-management"
  ],
  "homepage": "https://github.com/livebydesign2/agentic-spec-development#readme",
  "bugs": {
    "url": "https://github.com/livebydesign2/agentic-spec-development/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/livebydesign2/agentic-spec-development.git"
  },
  "license": "MIT",
  "author": "ASD Team <noreply@asd.dev>",
  "main": "lib/index.js",
  "bin": {
    "asd": "./bin/asd"
  },
  "scripts": {
    "start": "node bin/asd",
    "dev": "node bin/asd",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern='test/(?!integration|performance|startup).*\\.test\\.js$'",
    "test:integration": "jest --testPathPattern='test/integration/.*\\.test\\.js$'",
    "test:performance": "jest --testPathPattern='test/performance\\.test\\.js$' --testTimeout=30000",
    "test:startup": "jest --testPathPattern='test/startup.*\\.test\\.js$' --testTimeout=30000 --collectCoverage=false",
    "test:startup-validation": "jest --testPathPattern='test/startup-validation\\.test\\.js$' --testTimeout=15000 --collectCoverage=false",
    "test:startup-performance": "jest --testPathPattern='test/startup-performance\\.test\\.js$' --testTimeout=30000 --collectCoverage=false",
    "test:startup-errors": "jest --testPathPattern='test/startup-error-scenarios\\.test\\.js$' --testTimeout=20000 --collectCoverage=false",
    "test:cli-startup": "jest --testPathPattern='test/cli-startup\\.test\\.js$' --testTimeout=30000 --collectCoverage=false",
    "test:startup-full": "npm run test:startup-validation && npm run test:startup-performance && npm run test:startup-errors && npm run test:cli-startup",
    "test:ci": "jest --coverage --ci --watchAll=false",
    "test:ci-startup": "npm run test:startup-full --ci",
    "test:debug": "DEBUG_TESTS=true jest --verbose",
    "lint": "eslint lib/ test/ --ext .js && eslint bin/*",
    "lint:fix": "eslint lib/ test/ --ext .js --fix && eslint bin/* --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\"",
    "validate": "npm run lint && npm run format:check && npm run test:unit",
    "validate-startup": "npm run lint && npm run test:startup-full",
    "validate-specs": "node scripts/validate-spec-integrity.js .",
    "validate-specs-json": "node scripts/validate-spec-integrity.js . --json spec-integrity-report.json",
    "monitor-specs": "node scripts/spec-integrity-monitor.js . --watch",
    "monitor-specs-dashboard": "node scripts/spec-integrity-monitor.js . --watch --dashboard",
    "install-hooks": "bash scripts/install-hooks.sh",
    "preversion": "npm run validate && npm run test:integration && npm run test:startup-full"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "chokidar": "^4.0.3",
    "commander": "^9.0.0",
    "cosmiconfig": "^8.0.0",
    "handlebars": "^4.7.8",
    "joi": "^17.6.0",
    "js-yaml": "^4.1.0",
    "terminal-kit": "^3.1.2"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "chai": "^6.0.1",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "prettier": "^2.8.0",
    "sinon": "^21.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "private": false,
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "files": [
    "bin/",
    "lib/",
    "config/",
    "templates/",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ]
}
